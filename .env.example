# =============================================================================
# PATHFINDER MVP ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Required variables are marked with [REQUIRED]
# Optional variables are marked with [OPTIONAL]

# =============================================================================
# DATABASE CONFIGURATION [REQUIRED]
# =============================================================================
DATABASE_URL=postgresql://pathfinder:pathfinder_dev@localhost:5432/pathfinder
REDIS_URL=redis://localhost:6379

# =============================================================================
# SEARCH CONFIGURATION [REQUIRED]
# =============================================================================
TYPESENSE_API_KEY=xyz
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108

# =============================================================================
# AUTHENTICATION [REQUIRED FOR PRODUCTION, OPTIONAL FOR LOCAL DEV]
# =============================================================================
# Get these from: https://dashboard.clerk.com
# For local testing without auth, set DISABLE_AUTH=1
# For production or testing with auth, set DISABLE_AUTH=0 and configure Clerk keys below

CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here

# Set to "1" to disable auth for local testing (default for development)
# Set to "0" to enable auth (requires Clerk keys above)
DISABLE_AUTH=1

# =============================================================================
# EMAIL SERVICES [OPTIONAL - For outreach features]
# =============================================================================
# Gmail OAuth - Get from: https://console.cloud.google.com
GMAIL_CLIENT_ID=your_google_client_id
GMAIL_CLIENT_SECRET=your_google_client_secret

# Outlook/Microsoft OAuth - Get from: https://portal.azure.com
OUTLOOK_CLIENT_ID=your_microsoft_client_id
OUTLOOK_CLIENT_SECRET=your_microsoft_client_secret

# =============================================================================
# LLM SERVICES [OPTIONAL - For AI features]
# =============================================================================
# Claude/Anthropic - Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_claude_api_key

# OpenAI - Get from: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# EMAIL VERIFICATION [OPTIONAL]
# =============================================================================
# NeverBounce - Get from: https://neverbounce.com
NEVERBOUNCE_API_KEY=your_neverbounce_key

# =============================================================================
# EXTERNAL APIS [OPTIONAL]
# =============================================================================
# LinkedIn OAuth - Get from: https://www.linkedin.com/developers
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# USAJobs API - Get from: https://developer.usajobs.gov
USAJOBS_API_KEY=your_usajobs_key

# =============================================================================
# N8N CONFIGURATION [REQUIRED]
# =============================================================================
N8N_WEBHOOK_URL=http://localhost:5678/
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=pathfinder_dev

# =============================================================================
# APPLICATION CONFIGURATION [REQUIRED]
# =============================================================================
NEXTAUTH_URL=http://localhost:3000

# Generate a secure random string (min 32 characters)
# You can generate one with: openssl rand -base64 32
NEXTAUTH_SECRET=development_secret_change_in_production_min_32_chars

NODE_ENV=development

# =============================================================================
# FILE STORAGE [OPTIONAL - For resume uploads]
# =============================================================================
# S3-compatible storage (MinIO, AWS S3, etc.)
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=pathfinder
S3_REGION=us-east-1

# =============================================================================
# RATE LIMITING [OPTIONAL - Default values shown]
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_OUTREACH_PER_DAY=5
RATE_LIMIT_EMAILS_PER_DAY=25

# =============================================================================
# ANALYTICS [OPTIONAL]
# =============================================================================
# PostHog - Get from: https://posthog.com
POSTHOG_API_KEY=your_posthog_api_key
NEXT_PUBLIC_POSTHOG_API_KEY=your_posthog_public_key

# Sentry - Get from: https://sentry.io
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# ADMIN [OPTIONAL]
# =============================================================================
# Secure API key for admin endpoints (performance monitoring, etc.)
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=your_secure_admin_api_key_for_performance_endpoints

# =============================================================================
# NOTES
# =============================================================================
# - All required services (PostgreSQL, Redis, Typesense, n8n) are configured
#   automatically by docker-compose.yml
# - For local development, you can use the default values above
# - For production, ensure all secrets are changed and kept secure
# - Environment variables prefixed with NEXT_PUBLIC_ are exposed to the browser